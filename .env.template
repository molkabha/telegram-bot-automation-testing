# =============================================================================
# TESTING CONFIGURATION (OPTIONAL)
# =============================================================================

# Run browser in headless mode (true/false)
# Set to false for debugging UI tests
HEADLESS=true

# Test timeout in seconds
TIMEOUT=30

# Maximum number of API retry attempts
MAX_RETRIES=3

# Retry delay in seconds
RETRY_DELAY=1.0

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Set to true when running in CI/CD environment
CI=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Python environment
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom Telegram Web URL (usually not needed)
TELEGRAM_WEB_URL=https://web.telegram.org

# API base URL (usually not needed)
API_BASE_URL=https://api.telegram.org

# Custom directories (relative to project root)
SCREENSHOT_DIR=screenshots
REPORTS_DIR=reports
LOGS_DIR=logs

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker image name
DOCKER_IMAGE=telegram-bot-test-framework:latest

# Docker network name
DOCKER_NETWORK=test-network

# =============================================================================
# CI/CD SECRETS (For GitHub Actions/Jenkins)
# =============================================================================

# These should be set as secrets in your CI/CD platform, not in this file
# TELEGRAM_BOT_TOKEN (secret)
# TELEGRAM_BOT_USERNAME (secret)  
# TELEGRAM_TEST_CHAT_ID (secret)

# =============================================================================
# NOTIFICATION SETTINGS (OPTIONAL)
# =============================================================================

# Slack webhook for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Discord webhook for notifications (optional)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Email settings for notifications (optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=team@yourcompany.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode for development
DEBUG=false

# Save detailed API responses for debugging
SAVE_API_RESPONSES=false

# Take screenshots on test success (not just failures)
SCREENSHOT_ON_SUCCESS=false

# Keep test artifacts for longer (days)
ARTIFACT_RETENTION_DAYS=7

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum concurrent test execution
MAX_WORKERS=4

# Browser window size for UI tests
BROWSER_WIDTH=1920
BROWSER_HEIGHT=1080

# Page load timeout for UI tests
PAGE_LOAD_TIMEOUT=30

# Element wait timeout for UI tests
ELEMENT_WAIT_TIMEOUT=10

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Disable SSL verification (not recommended for production)
DISABLE_SSL_VERIFY=false

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# User agent string for requests
USER_AGENT=TelegramBotTestFramework/1.0.0

# =============================================================================
# QUICK SETUP GUIDE
# =============================================================================
#
# 1. Create a new bot:
#    - Open Telegram and search for @BotFather
#    - Send /newbot and follow the instructions
#    - Copy the bot token and set TELEGRAM_BOT_TOKEN
#
# 2. Get your bot username:
#    - Your bot username will be provided by @BotFather
#    - Set TELEGRAM_BOT_USERNAME (include the @ symbol)
#
# 3. Get your chat ID:
#    - Start a conversation with your bot
#    - Send any message to your bot
#    - Go to https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
#    - Look for "chat":{"id": YOUR_CHAT_ID}
#    - Set TELEGRAM_TEST_CHAT_ID
#
# 4. Test your configuration:
#    - Run: make check-env
#    - Run: make test-smoke
#
# =============================================================================